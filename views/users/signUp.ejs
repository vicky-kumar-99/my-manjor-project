<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <h1 class="col-6 offset-3">signUp on wanderlust</h1>
    <div class="col-6 offset-3">
        <form action="/signup" method="post" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-labal">Username</label>
                <input name="username" id="username" type="text" class="form-control" required>
                <div class="valid-feedback">Look good</div>
              </div>
              
              <div class="mb-3">
                <label for="email" class="form-labal">Email</label>
                <input name="email" id="email" type="text" class="form-control" required>
              </div>
              
              <div class="mb-3">
                <label for="password" class="form-labal">Password</label>
                <input name="password" id="password" type="text" class="form-control" required>
              </div>
              <button class="btn btn-success">signUp</button>
        </form>
    </div>
</div>